@{
    var controlador = ViewContext.RouteData.Values["controller"]?.ToString();
    var accion = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inmobiliaria.styles.css" asp-append-version="true" />
</head>

<body data-bs-theme="dark" class="vh-100 vw-100 m-0 p-0 d-flex flex-column justify-content-between align-items-center">
    <header class="container-fluid">
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3 text-white">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">INMOBILIARIA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul id="header_top_bar" class="navbar-nav flex-grow-1">
                        <li
                            class="nav-item align-items-center @(controlador == "Home" && accion == "Index" ? "border border-white" : "")">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                Inicio
                            </a>
                        </li>
                        <li
                            class="nav-item align-items-center @(controlador == "Inmueble" && accion == "Index" ? "border border-white" : "")">
                            <a class="nav-link text-white" asp-area="" asp-controller="Inmueble" asp-action="Index">
                                Inmuebles
                            </a>
                        </li>
                        <li
                            class="nav-item align-items-center @(controlador == "Propietario" && accion == "Index" ? "border border-white" : "")">
                            <a class="nav-link text-white" asp-area="" asp-controller="Propietario" asp-action="Index">
                                Propietarios
                            </a>
                        </li>
                        <li
                            class="nav-item align-items-center @(controlador == "Inquilino" && accion == "Index" ? "border border-white" : "")">
                            <a class="nav-link text-white" asp-area="" asp-controller="Inquilino" asp-action="Index">
                                Inquilinos
                            </a>
                        </li>
                        <li
                            class="nav-item align-items-center @(controlador == "Contrato" && accion == "Index" ? "border border-white" : "")">
                            <a class="nav-link text-white" asp-route-filtro="fecha" asp-controller="Contrato"
                                asp-action="Index">
                                Contratos
                            </a>
                        </li>
                        <li
                            class="nav-item align-items-center @(controlador == "Pago" && accion == "Index" ? "border border-white" : "")">
                            <a class="nav-link text-white" asp-area="" asp-controller="Pago" asp-action="Index">
                                Pagos
                            </a>
                        </li>
                    </ul>
                    <a class="btn border border-danger" asp-controller="Cuenta" asp-action="CerrarSesion">CERRAR
                        SESIÓN</a>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="h-100 container-fluid d-flex flex-column justify-content-start align-items-center">
        @RenderBody()
    </main>
    <footer class="border-top p-3 footer bg-black container-fluid text-center text-muted">
        &copy; 2025 - INMOBILIARIA
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
